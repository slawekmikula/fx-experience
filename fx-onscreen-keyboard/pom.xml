<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.comtel2000</groupId>
		<artifactId>fx-parent</artifactId>
		<version>8.2.6-SNAPSHOT-AS</version>
	</parent>
	<artifactId>fx-onscreen-keyboard</artifactId>
	<name>fx-onscreen-keyboard</name>
	<description>JavaFX on-screen keyboard component with xml layout configuration.</description>
	<url>http://comtel2000.org</url>
	<packaging>jar</packaging>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.3</version>
				<executions>
					<execution>
						<configuration>
							<excludePackageNames>org.comtel2000.keyboard.xml.layout</excludePackageNames>
						</configuration>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<arguments>-no-header</arguments>
					<schemaDirectory>${basedir}/src/main/resources/xml</schemaDirectory>
					<schemaFiles>kb-layout.xsd</schemaFiles>
					<outputDirectory>${basedir}/src/main/java/</outputDirectory>
					<noGeneratedHeaderComments>true</noGeneratedHeaderComments>
					<outputDirectory>src/main/java/</outputDirectory>
					<packageName>org.comtel2000.keyboard.xml.layout</packageName>
					<clearOutputDir>false</clearOutputDir>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>